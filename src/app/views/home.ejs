<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Фильмы</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/assets/styles/home.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- PWA мета-теги -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Watch Films">
    <meta name="application-name" content="Watch Films">
    <meta name="theme-color" content="#000000">
    <meta name="description" content="Смотрите фильмы и мониторьте производительность системы">

    <!-- Иконки для iOS -->
    <link rel="apple-touch-icon" href="/assets/images/icons/icon-192x192.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/assets/images/icons/icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/icons/icon-180x180.png">
    <link rel="apple-touch-icon" sizes="167x167" href="/assets/images/icons/icon-167x167.png">

    <!-- Заставка для iOS -->
    <link rel="apple-touch-startup-image" href="/assets/images/splash/splash-2048x2732.png"
        media="(device-width: 1024px) and (device-height: 1366px) and (-webkit-device-pixel-ratio: 2) and (orientation: portrait)">
    <link rel="apple-touch-startup-image" href="/assets/images/splash/splash-1668x2224.png"
        media="(device-width: 834px) and (device-height: 1112px) and (-webkit-device-pixel-ratio: 2) and (orientation: portrait)">
    <link rel="apple-touch-startup-image" href="/assets/images/splash/splash-1536x2048.png"
        media="(device-width: 768px) and (device-height: 1024px) and (-webkit-device-pixel-ratio: 2) and (orientation: portrait)">
    <link rel="apple-touch-startup-image" href="/assets/images/splash/splash-1125x2436.png"
        media="(device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) and (orientation: portrait)">
    <link rel="apple-touch-startup-image" href="/assets/images/splash/splash-1242x2688.png"
        media="(device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) and (orientation: portrait)">
    <link rel="apple-touch-startup-image" href="/assets/images/splash/splash-750x1334.png"
        media="(device-width: 375px) and (device-height: 667px) and (-webkit-device-pixel-ratio: 2) and (orientation: portrait)">
    <link rel="apple-touch-startup-image" href="/assets/images/splash/splash-640x1136.png"
        media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2) and (orientation: portrait)">

    <!-- Web App Manifest -->
    <link rel="manifest" href="/manifest.json">

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/icons/favicon-16x16.png">
</head>

<body>
    <div class="app-container">
        <header class="app-header">
            <div class="logo">
                <svg class="logo-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                    <path fill="currentColor"
                        d="M16.5 6a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7zm-9 5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7zm4.5-9a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7zm4.5 13a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7z" />
                </svg>
                <h1 class="logo-text">Watch Films</h1>
            </div>
            <div class="search-container">
                <form id="searchForm" class="search-form">
                    <input type="text" id="movieSearch" placeholder="Найти фильм или сериал..." class="search-input"
                        autocomplete="off">
                    <button type="submit" class="search-button">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                        <span class="button-text">Поиск</span>
                    </button>
                </form>
            </div>
        </header>

        <main class="content-section">
            <div class="dashboard-grid">
                <!-- Секция мониторинга системы -->
                <section class="monitoring-section">
                    <div class="charts-wrapper">
                        <div class="chart-card">
                            <div class="chart-header">
                                <div class="chart-info">
                                    <h3 class="chart-title"><span>Температура процессора</span></h3>
                                </div>
                                <div class="metric-badge" data-value="cpu-temp">--°C</div>
                            </div>
                            <div class="chart-container">
                                <canvas id="cpuChart"></canvas>
                            </div>
                        </div>

                        <div class="chart-card">
                            <div class="chart-header">
                                <div class="chart-info">
                                    <h3 class="chart-title"><span>Оперативная память</span></h3>
                                </div>
                                <div class="metric-badge" data-value="ram-detail">-- / -- GB</div>
                            </div>
                            <div class="chart-container">
                                <canvas id="ramChart"></canvas>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Информация о системе -->
                <section class="system-section">
                    <div class="info-card system-info">
                        <div class="info-card-header">
                            <h3 class="info-card-title">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                                    <line x1="8" y1="21" x2="16" y2="21"></line>
                                    <line x1="12" y1="17" x2="12" y2="21"></line>
                                </svg>
                                Система
                            </h3>
                        </div>
                        <div class="info-list">
                            <div class="info-item">
                                <span class="info-label">Платформа</span>
                                <span class="info-value" data-key="platform">-</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Версия ОС</span>
                                <span class="info-value" data-key="osRelease">-</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Процессор</span>
                                <span class="info-value" data-key="cpuModel">-</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Ядра CPU</span>
                                <span class="info-value" data-key="cpuCores">-</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Время работы</span>
                                <span class="info-value" data-key="uptime">-</span>
                            </div>
                        </div>
                    </div>

                    <!-- Информация о приложении -->
                    <div class="info-card app-info">
                        <div class="info-card-header">
                            <h3 class="info-card-title">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <polygon
                                        points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2">
                                    </polygon>
                                </svg>
                                Приложение
                            </h3>
                        </div>
                        <div class="info-list">
                            <div class="info-item">
                                <span class="info-label">Аптайм</span>
                                <span class="info-value" data-key="processUptime">-</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Порт</span>
                                <span class="info-value" data-key="port">-</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Мониторы</span>
                                <span class="info-value" data-key="monitors">-</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Отладка</span>
                                <span class="info-value mono" data-key="debug">-</span>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    </div>

    <div id="notifications" class="notifications-container"></div>

    <script>
        window.apiKey = localStorage.getItem('apiKey') || '<%= apiKey %>';

        if (!window.apiKey) {
            const apiKey = prompt('Введите API ключ для доступа к функциям:');
            if (apiKey) {
                localStorage.setItem('apiKey', apiKey);
                window.apiKey = apiKey;
            }
        }
    </script>
    <script src="/assets/scripts/home.js"></script>
</body>

</html>